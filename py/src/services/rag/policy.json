{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:REGION:NUMBER:*"
        },
		{
			"Effect": "Allow",
			"Action": [
				"bedrock:RetrieveAndGenerate",
				"bedrock:Retrieve",
				"bedrock:InvokeModel",
				"bedrock:InvokeAgent"
			],
			"Resource": "*"
		},
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:REGION:NUMBER:log-group:/aws/lambda/image:*"
            ]
        }
    ]
}